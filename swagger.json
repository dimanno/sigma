{
  "swagger": "2.0",
  "info": {
    "version": "1.0",
    "title": "Sigma test-task",
    "description": "Create REST API. Implement authorization and CRUD for users ",
    "contact": {
      "email": "dimanno.dev@gmail.com",
      "name": "Dmytro",
      "url": "https://github.com/dimanno"
    }
  },
  "host": "localhost:5005",
  "schemes": [
    "http"
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "users"
        ],
        "description": "user object that needs to be added",
        "operationId": "addUser",
        "parameters": [
          {
            "in": "body",
            "name": "name",
            "description": "User name",
            "required": true,
            "type": "string",
            "default": "name"
          },
          {
            "in": "body",
            "name": "email",
            "description": "User email",
            "required": true,
            "type": "string",
            "default": "admin@gmail.com"
          },
          {
            "in": "body",
            "name": "password",
            "description": "User password",
            "required": true,
            "type": "string",
            "default": "12345Az$"
          },
          {
            "in": "body",
            "name": "age",
            "description": "User age",
            "required": true,
            "type": "number"
          }
        ],
        "responses": {
          "200": {
            "description": "User was created",
            "schema": {
              "type": "object",
              "properties": {
                "_id": {
                  "type": "string",
                  "example": "12345querty"
                }
              },
              "$ref": "#/definitions/UserBody"
            }
          },
          "400": {
            "description": "Just an error",
            "schema": {
              "properties": {
                "msg": {
                  "type": "string",
                  "example": "Something went wrong"
                },
                "code": {
                  "type": "number",
                  "example": 400
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "users"
        ],
        "summary": "get all users",
        "description": "get array users",
        "operationId": "getUsers",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "description": "get users",
            "required": false,
            "type": "number",
            "default": 1
          },
          {
            "in": "formData",
            "name": "perPage",
            "required": false,
            "type": "number",
            "default": 20
          }
        ],
        "responses": {
          "200": {
            "description": "All users",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/UserBody"
              }
            }
          },
          "400": {
            "description": "Just an error",
            "schema": {
              "properties": {
                "msg": {
                  "type": "string",
                  "example": "Something went wrong"
                },
                "code": {
                  "type": "number",
                  "example": 400
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "UserBody": {
      "properties": {
        "id": {
          "type": "string",
          "example": "12345query",
          "description": "mongoDB ID"
        },
        "email": {
          "type": "string",
          "example": "bar@gmail.com"
        },
        "name": {
          "type": "string",
          "example": "Dimas",
          "description": "User name"
        }
      }
    }
  }
}
