        "summary": "Create user",
        "description": "user object that needs to be added",
        "operationId": "addUser",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "age",
                  "email",
                  "name",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "User email",
                    "default": "admin@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "description": "User password",
                    "default": "12345Az$"
                  },
                  "name": {
                    "type": "string",
                    "description": "User name",
                    "default": "name"
                  },
                  "age": {
                    "type": "number",
                    "description": "User age"
                  }
                }
